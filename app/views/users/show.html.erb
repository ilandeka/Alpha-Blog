  <h1 align="center">Welcome to <%= @user.username %>'s page</h1>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= gravatar_for @user, size: 150 %>
    </div>
  </div>

  <h4 align="center"><%= @user.username %>'s articles</h4>
  <% if logged_in? and User.find(@user).admin? %>
    <ul class="listing" align="center">
      <li>Admin</li>
    </ul>
  <% else %>
    <ul class="listing" align="center">
      <li>User</li>
    </ul>
  <% end %>
  <% if logged_in? and current_user.admin? %>
    <ul class="listing" align="center">
      <li><%= link_to "Delete this user", user_path(@user), method: :delete,
          data: { confirm: "Are you sure you want to delete this user and all their articles?" } %>
      </li>
    </ul>
  <% end %>
  <div class="center">
    <%= will_paginate @user_articles %>
  </div>
  <%= render 'articles/article', obj: @user_articles %>
  <div class="center">
    <%= will_paginate @user_articles %>
  </div>
