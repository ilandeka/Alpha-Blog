<h1 class="center">Welcome to <%= @user.username %>'s page</h1>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for @user, size: 150 %>
  </div>
</div>

<h4 class="white center"><%= @user.username %>'s articles</h4>
<ul class="white listing" align="center">
  <% if User.find(@user).admin? %>
    <li>Admin</li>
  <% else %>
    <li>User</li>
  <% end %>
</ul>

<% if logged_in? and current_user.admin? and @user.admin == false %>
  <div class="listing">
    <p>
      <%= link_to "Delete this User", user_path(@user), method: :delete,
        data: { confirm: "Are you sure you want to delete this user and all their articles?" },
        class: "btn btn-xs btn-danger" %>
      <%= link_to 'Edit this User', edit_user_path(@user), class: "btn btn-xs btn-primary" %>
      <%= link_to "Give User admin", user_path(@user), method: :patch,
        data: { confirm: "Are you sure you want to give #{ @user.username } Admin?" },
        class: "btn btn-xs btn-success" %>
    </p>
  </div>
<% end %>

<div class="center">
  <%= will_paginate @user_articles %>
</div>
