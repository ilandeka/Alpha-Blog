<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :username %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :email %>
        </div>
        <div class="col-sm-6">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-3">
          <%= f.label :password %>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
      </div>
      <% if current_page?(controller: 'users', action: 'new')%>
        <div class="form-group">
          <div class="control-label col-sm-3">
            <%= f.label :password_confirm %>
          </div>
          <div class="col-sm-6">
            <%= f.password_field :password_confirm, class: "form-control", placeholder: "Confirm password", disabled: "true" %>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-10 alignment">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
        </div>
      </div>

    <% end %>

    <div class="col-xs-8 col-xs-offset-2 center">
      [ <%= link_to 'Cancel request and return to articles listing', articles_path, class: "red" %> ]
    </div>

    <% if !(logged_in?) %>
      <div class="col-xs-8 col-xs-offset-2 center">
        Already have an account? <%= link_to 'Login here', login_path, class: "red" %>
      </div>
    <% end %>

  </div>
</div>
