<h1 class="alignment">Log in</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class="form-group">
    <div class="control-label col-sm-4">
      <%= f.label :email, class: "white" %>
    </div>
    <div class="col-sm-4">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-4">
      <%= f.label :password, class: "white" %>
    </div>
    <div class="col-sm-4">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: "off" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-10 alignment">
      <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
    </div>
  </div>

<% end %>

<div class="col-xs-4 col-xs-offset-4" align="center">
  [ <%= link_to 'Cancel request and return to articles listing', articles_path, class: "white red" %> ]
</div>
