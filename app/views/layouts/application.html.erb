<!DOCTYPE html>
<html>
  <head>
    <title>Alpha Blog</title>
    <!-- Viewport -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag 'icon.png' %>
    <!-- Google Font API -->
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <!-- Animation from Animate.css CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <!-- Icons from fontawesome CDN -->
    <script src="https://use.fontawesome.com/5b186725ec.js"></script>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!-- Back to top button -->
    <button onclick="topFunction()" class="btn btn-info btn-lg" id="myBtn" title="Back to Top" align="center">
      <span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span>
    </button>

    <div id="wrapper">
      <!-- Navigation bar -->
      <%= render 'layouts/navigation' %>

      <!-- Header -->
      <%=render "layouts/header" %>

      <div class="container">
        <!-- Error messages -->
        <%= render 'layouts/messages' %>
        <%= yield %>
      </div>
    </div>

    <!-- Footer -->
    <%= render 'layouts/footer' %>

    <!-- Debugger -->
    <!-- <%= debug(params) if Rails.env.development? %> -->

  </body>
</html>
