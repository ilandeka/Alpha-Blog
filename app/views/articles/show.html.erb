<div class="col-md-8 col-md-offset-2 user margin">
  <h2 class="alignment">Title: <%= @article.title %></h2>
  <div class="well col-md-12">
    <% if @article.user %>
      <ul class="listing">
        <div class="row center">
          <div class="col-md-4 col-md-offset-4">
            <li>Created by:</li>
            <!-- <%= link_to(gravatar_for(@article.user), user_path(@article.user)) if @article.user %> -->
            <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
              <li class="article-title">
                <!-- <%= link_to(@article.user.username, user_path(@article.user)) if @article.user %> -->
                <%= link_to @article.user.username, user_path(@article.user) %>
              </li>
            <li>
              <small>
                <%= pluralize(@article.user.articles.count, "article") if @article.user.articles %>
              </small>
            </li>
          </div>
        </div>
      </ul>
    <% end %>
    <h4 class="center description"><strong>Description</strong></h4>
      <hr />
    <%= simple_format(@article.description) %>
      <div class="article-actions">
        <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
          <a class="btn btn-primary padding" href="<%= edit_article_path(@article) %>">
            <i class="fa fa-pencil fa-fw"></i> Edit</a>
          <a class="btn btn-danger padding" href="<%= article_path(@article) %>" data-method="delete" data-confirm="Are you sure you want to delete the article?">
            <i class="fa fa-trash-o fa-fw"></i> Delete</a>
        <% end %>
        <a class="btn btn-success padding" href="<%= articles_path %>">
          <i class="fa fa-newspaper-o fa-fw"></i> All articles</a>
      </div>
  </div>
</div>
